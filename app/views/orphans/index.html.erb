<div class="UI-body">

  <div class="navbar">
    <div class="navbar-inner">
      <!--<a class="brand" href="#">Actions</a>-->
      <div class="btn-group" style="float: right">
        <button class="btn">Generate Users</button>
        <button class="btn" data-toggle="button">Select All</button>
        <button class="btn" data-toggle="button">Select None</button>
