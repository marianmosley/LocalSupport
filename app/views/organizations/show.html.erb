<div class="row">
        <h3>
          <%= @organization.name %>
        </h3>
        <p>
          <%= @organization.description %>
        </p>
        <div class="container">
          <div class="row">
            <div class="span5">
              <div class="well">
                <h4>
                  Contact information
                </h4>
                <% unless @organization.postcode.blank? %>
                  <p>
                    <b>Postcode:</b>
                    <%= @organization.postcode %>
                  </p>
                <% end %>
                <% unless @organization.email.blank? %>
                    <p>
                      <b>Email:</b>
                      <a href="mailto:<%= @organization.email %>"><%= @organization.email %></a>
                    </p>
                <% end %>
                <p>
                  <b>Website:</b>
                  <%= link_to_if(!@organization.website.blank?, @organization.website, @organization.website, {:target => '_blank'}){"We don't yet have a website link for them."}  %>
                </p>
                <p><b>Donation Info:</b>
                <%= donation_info_msg %>
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="container">
          <div class="row">
            <div class="position-bottom span2">
              <%= link_to_if(@editable, "Edit", edit_organization_path(@organization.id), {:class => 'btn btn-primary'}){} %>
              <!--make sure to pass params in order they appear in rake routes!-->
              <%= link_to "This is my organization", organization_user_path(@organization.id, current_user.id), {method: :put, class: 'btn btn-primary'} if @grabbable %>
            </div>
          </div>
        </div>
        <% content_for :map do %>
            <%= gmaps("map_options" => {"auto_adjust" => true, "auto_zoom" => false, "center_latitude" => 51.5978,
                                        "center_longitude" => -0.3370, "zoom" => 13}, "markers" => {"data" => @json}) %>
        <% end %>
</div>
